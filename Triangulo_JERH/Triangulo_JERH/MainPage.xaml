<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Triangulo_JERH.MainPage">
    <ContentPage.Resources>
        <StyleSheet Source="Css\TrianguloStyle.css"/>
    </ContentPage.Resources>

    <StackLayout>
        <Frame  Padding="24" CornerRadius="0" StyleId="Encabezado">
            <Label Text="Tiangulo" HorizontalTextAlignment="Center"  StyleClass="Encabezado" FontSize="36"/>
        </Frame>
        <StackLayout Padding="20,20,20,20">
            <Grid>
                <Label Grid.Column="0" Grid.Row="0" VerticalOptions="Center"  Text="Base(Cm)" StyleClass="Texto"/>
                <Entry Grid.Column="1" Grid.Row="0"  Placeholder="Base(Cm)" x:Name="Base" Keyboard="Numeric" StyleClass="Input"/>

                <Label Grid.Column="0" Grid.Row="1" VerticalOptions="Center" Text="Lado 1(Cm)" StyleClass="Texto"/>
                <Entry Grid.Column="1" Grid.Row="1" Placeholder="Lado 1(Cm)" x:Name="Lado_1" Keyboard="Numeric" StyleClass="Input"/>

                <Label Grid.Column="0" Grid.Row="2" VerticalOptions="Center" Text="Lado 2(Cm)" StyleClass="Texto"/>
                <Entry Grid.Column="1" Grid.Row="2"  Placeholder="Lado 2(Cm)" x:Name="Lado_2" Keyboard="Numeric" StyleClass="Input"/>

                <Label Grid.Column="0" Grid.Row="3" VerticalOptions="Center" Text="Altura" StyleClass="Texto"/>
                <Entry Grid.Column="1" Grid.Row="3" Placeholder="Altura(Cm)" x:Name="Altura" Keyboard="Numeric" StyleClass="Input"/>

                <Label Grid.Column="0" Grid.Row="4" VerticalOptions="Center" Text="Area" StyleClass="Texto"/>
                <Entry Grid.Column="1" Grid.Row="4" Placeholder="Area(Cm)" x:Name="AreaTriangulo" IsEnabled="False" StyleClass="EArea"/>

                <Label Grid.Column="0" Grid.Row="5" VerticalOptions="Center" Text="Tipo" StyleClass="Texto"/>
                <Entry Grid.Column="1" Grid.Row="5" Placeholder="Tipo" x:Name="Tipo" IsEnabled="False" StyleId="ETipo"/>



                <Button Grid.ColumnSpan="2" Grid.Row="6" Clicked="Area" Text="Calcular"></Button>
            </Grid>
        </StackLayout>

        <Image Source="TrianguloEquilatero.png" HeightRequest="180" IsVisible="false" x:Name="imgEquilatero"/>
        <Image Source="TrianguloEscaleno.png" HeightRequest="180" IsVisible="false" x:Name="imgEscaleno"/>
        <Image Source="Trianguloisosceles.png" HeightRequest="180" IsVisible="false" x:Name="imgisosceles"/>

        
        
        
        
    </StackLayout>

</ContentPage>
